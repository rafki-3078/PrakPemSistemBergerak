<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:text="Daftar Akun Baru"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="45dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Bergabung dengan Terminal Digital"
                android:textColor="@color/white_dim"
                android:textSize="14sp"
                android:layout_marginBottom="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_glass"
                android:padding="24dp">

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input_field"
                    android:backgroundTint="@color/white_glass"
                    android:hint="Nama Lengkap"
                    android:textColorHint="@color/white_dim"
                    android:textColor="@color/white"
                    android:paddingHorizontal="16dp"
                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/white_dim"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/etRegEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input_field"
                    android:backgroundTint="@color/white_glass"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/white_dim"
                    android:textColor="@color/white"
                    android:paddingHorizontal="16dp"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/white_dim"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input_field"
                    android:backgroundTint="@color/white_glass"
                    android:hint="Nomor HP"
                    android:inputType="phone"
                    android:textColorHint="@color/white_dim"
                    android:textColor="@color/white"
                    android:paddingHorizontal="16dp"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/white_dim"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/etRegPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input_field"
                    android:backgroundTint="@color/white_glass"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColorHint="@color/white_dim"
                    android:textColor="@color/white"
                    android:paddingHorizontal="16dp"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/white_dim"
                    android:layout_marginBottom="24dp"/>

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="Daftar Akun"
                    android:background="@drawable/bg_button_primary"
                    android:backgroundTint="@color/primary_blue"
                    app:backgroundTint="@null"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/btnBackToLogin"
                android:text="Sudah punya akun? Masuk di sini"
                android:textColor="@color/white_dim"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>