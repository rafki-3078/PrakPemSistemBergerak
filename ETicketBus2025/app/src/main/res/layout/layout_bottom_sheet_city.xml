<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_glass"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:padding="20dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:background="@color/gray_light"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvSheetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Kota"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black_text"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etSearchCity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_input_field"
        android:backgroundTint="#F1F5F9"
        android:hint="Cari kota atau terminal..."
        android:paddingHorizontal="16dp"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="12dp"
        android:drawableTint="@color/nav_inactive"
        android:layout_marginBottom="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCities"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

</LinearLayout>