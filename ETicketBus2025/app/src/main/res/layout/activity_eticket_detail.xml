<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="45dp"
        android:paddingBottom="12dp"
        android:paddingHorizontal="20dp"
        android:background="@color/bg_main"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_circle_glass"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">
            <TextView
                android:text="E-Ticket"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Tiket Digital Anda"
                android:textColor="@color/white_dim"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

        <TextView
            android:text="LUNAS"
            android:textColor="#10B981"
            android:background="@drawable/bg_facility_chip"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_glass">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:background="@drawable/bg_header_rounded">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:text="Booking ID"
                            android:textColor="#CCFFFFFF"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvBookingId"
                            android:text="ETB-882931"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_ticket"
                        app:tint="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:text="Perjalanan Pergi"
                        android:textColor="@color/primary_blue"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginBottom="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:id="@+id/tvOperatorDepart"
                            android:text="NPM"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:background="@drawable/bg_button_primary"
                            android:backgroundTint="@color/primary_blue"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:layout_marginEnd="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvClassDepart"
                            android:text="Sutan Class"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:background="@drawable/bg_facility_chip"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView android:text="Dari" android:textColor="@color/white_dim" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:id="@+id/tvOriginDepart" android:text="Padang" android:textColor="@color/white" android:textSize="18sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:id="@+id/tvTimeDepart" android:text="08:00" android:textColor="@color/primary_blue" android:textSize="14sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/white_dim"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="end">
                            <TextView android:text="Ke" android:textColor="@color/white_dim" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:id="@+id/tvDestDepart" android:text="Jakarta" android:textColor="@color/white" android:textSize="18sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:id="@+id/tvTimeArriveDepart" android:text="14:00" android:textColor="@color/primary_blue" android:textSize="14sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_facility_chip"
                        android:padding="12dp">

                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                            <TextView android:text="Tanggal" android:textColor="@color/white_dim" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:id="@+id/tvDateDepart" android:text="22 Nov 2025" android:textColor="@color/white" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#20FFFFFF" android:layout_marginHorizontal="12dp"/>

                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                            <TextView android:text="Kursi" android:textColor="@color/white_dim" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:id="@+id/tvSeatsDepart" android:text="1A, 1B" android:textColor="@color/accent_orange" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutReturnTicket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/bg_dashed_line"
                        android:layerType="software"
                        android:layout_marginHorizontal="12dp"
                        android:alpha="0.5"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:text="Perjalanan Pulang"
                            android:textColor="@color/primary_blue"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_marginBottom="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">
                            <TextView
                                android:id="@+id/tvOperatorReturn"
                                android:text="ANS"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:background="@drawable/bg_button_primary"
                                android:backgroundTint="@color/primary_blue"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="4dp"
                                android:layout_marginEnd="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvClassReturn"
                                android:text="Royal Class"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:background="@drawable/bg_facility_chip"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:text="Dari" android:textColor="@color/white_dim" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:id="@+id/tvOriginReturn" android:text="Jakarta" android:textColor="@color/white" android:textSize="18sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:id="@+id/tvTimeDepartReturn" android:text="19:00" android:textColor="@color/primary_blue" android:textSize="14sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_arrow_forward" app:tint="@color/white_dim"/>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:gravity="end">
                                <TextView android:text="Ke" android:textColor="@color/white_dim" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:id="@+id/tvDestReturn" android:text="Padang" android:textColor="@color/white" android:textSize="18sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:id="@+id/tvTimeArriveReturn" android:text="05:00" android:textColor="@color/primary_blue" android:textSize="14sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/bg_facility_chip"
                            android:padding="12dp">
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:text="Tanggal" android:textColor="@color/white_dim" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:id="@+id/tvDateReturn" android:text="25 Nov 2025" android:textColor="@color/white" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#20FFFFFF" android:layout_marginHorizontal="12dp"/>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                                <TextView android:text="Kursi" android:textColor="@color/white_dim" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:id="@+id/tvSeatsReturn" android:text="2C, 2D" android:textColor="@color/accent_orange" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/bg_dashed_line"
                    android:layerType="software"
                    android:layout_marginHorizontal="12dp"
                    android:alpha="0.5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp">

                    <TextView
                        android:text="Tunjukkan QR Code saat Check-in"
                        android:textColor="@color/white_dim"
                        android:textSize="12sp"
                        android:layout_marginBottom="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgQrCode"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@drawable/bg_input_field"
                        android:padding="12dp"
                        android:src="@drawable/ic_qr_code"
                        app:tint="@color/bg_main" />
                    <TextView
                        android:id="@+id/tvTicketCode"
                        android:text="8829-3123-5512"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:letterSpacing="0.1"
                        android:layout_marginTop="16dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:text="Simpan PDF"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_button_secondary"
                    app:backgroundTint="@null"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnShare"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:text="Bagikan"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_button_primary"
                    android:backgroundTint="@color/primary_blue"
                    app:backgroundTint="@null"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>